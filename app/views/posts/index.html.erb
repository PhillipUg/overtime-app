<h1>Posts</h1>

<table class="table table-sm table-hover table-bordered">
  <thead>
    <tr>
      <th>
        #
      </th>
      <th>
        Date
      </th>
      <th>
        User
      </th>
      <th>
        Rationale
      </th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td>
        <%= post.id %>
      </td>
      <td>
        <%= post.date %>
      </td>
      <td>
        <%= post.user.last_name %>
      </td>
      <td>
        <%= truncate(post.rationale, length: 20) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>